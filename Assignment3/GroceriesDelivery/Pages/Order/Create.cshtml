@page
@model GroceriesDelivery.Pages_Order.CreateModel

@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.OrderDateCreated" class="control-label"></label>
                <input asp-for="Order.OrderDateCreated" class="form-control" />
                <span asp-validation-for="Order.OrderDateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderStatus" class="control-label"></label>
                <input asp-for="Order.OrderStatus" class="form-control" />
                <span asp-validation-for="Order.OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.CustID" class="control-label"></label>
                <input asp-for="Order.CustID" class="form-control"/>
                <span asp-validation-for="Order.CustID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.DriverID" class="control-label"></label>
                <select asp-for="Order.DriverID" class ="form-control" asp-items="ViewBag.DriverID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
